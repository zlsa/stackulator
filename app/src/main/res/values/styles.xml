<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>

    <item name="colorControlHighlight">@color/ripple_primary</item>

    <item name="android:statusBarColor">@color/black</item>
  </style>

  <style name="AppTheme.Button" parent="@android:style/Widget.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>

    <item name="android:layout_weight">1</item>

    <!--<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="background">?attr/selectableItemBackgroundBorderless</item>-->

    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="background">?attr/selectableItemBackgroundBorderless</item>

    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>

    <item name="android:textSize">@dimen/text_size_normal</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>

    <item name="android:textAllCaps">true</item>
  </style>

  <!-- Primary button; e.g. numbers -->

  <style name="AppTheme.ButtonPrimary" parent="@style/AppTheme.Button">
    <item name="android:textStyle">normal</item>
    <item name="android:tint">@color/text_primary</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="AppTheme.ButtonPrimary.Symbol" parent="@style/AppTheme.ButtonPrimary">
    <item name="android:textSize">@dimen/text_size_symbol</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!-- Accent button (very bold! use sparingly) -->

  <style name="AppTheme.ButtonAccent" parent="@style/AppTheme.Button">
    <item name="android:stateListAnimator">@null</item>

    <item name="android:elevation">8dp</item>
    <item name="elevation">8dp</item>
    <item name="android:background">@drawable/button_accent</item>
    <item name="background">@drawable/button_accent</item>

    <item name="android:clipToPadding">false</item>

    <item name="android:textStyle">normal</item>
    <item name="android:tint">@color/text_primary</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="AppTheme.ButtonAccent.Symbol" parent="@style/AppTheme.ButtonAccent">
    <item name="android:textSize">@dimen/text_size_symbol</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!-- Top row of secondary buttons -->

  <style name="AppTheme.ButtonSecondary" parent="@style/AppTheme.Button">
    <item name="android:stateListAnimator">@null</item>

    <item name="android:elevation">@dimen/secondary_elevation</item>
    <item name="elevation">@dimen/secondary_elevation</item>

    <item name="android:background">@color/background_secondary</item>
    <item name="background">@color/background_secondary</item>

    <item name="android:foreground">?attr/selectableItemBackground</item>

    <item name="android:textStyle">normal</item>
    <item name="android:tint">@color/text_secondary</item>
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <style name="AppTheme.ButtonSecondary.Horizontal" parent="@style/AppTheme.ButtonSecondary">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>

    <item name="android:layout_weight">1</item>
  </style>

  <style name="AppTheme.ButtonSecondary.Symbol" parent="@style/AppTheme.ButtonSecondary">
    <item name="android:textSize">@dimen/text_size_symbol</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!-- Used for arithmetic operation buttons -->

  <style name="AppTheme.ButtonOperator" parent="@style/AppTheme.Button">
    <item name="android:textStyle">bold</item>
    <item name="android:tint">@color/text_secondary</item>
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <style name="AppTheme.ButtonOperator.Symbol" parent="@style/AppTheme.ButtonOperator">
    <item name="android:textSize">@dimen/text_size_symbol</item>
    <item name="android:textAllCaps">false</item>
  </style>

</resources>
