<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"

  android:layout_width="match_parent"
  android:layout_height="@dimen/aboutpage_info_entry_height"

  android:background="?attr/selectableItemBackground"
  >

  <ImageView
    android:id="@+id/aboutpage_entry_icon"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_centerVertical="true"

    android:layout_alignParentStart="true"

    android:tint="?android:attr/textColorPrimary"

    android:layout_marginStart="@dimen/aboutpage_info_entry_icon_margin_start"
    />

  <TextView
    android:id="@+id/aboutpage_entry_title"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_centerVertical="true"

    android:layout_alignParentStart="true"

    android:layout_marginStart="@dimen/aboutpage_info_entry_text_margin_start"

    style="@style/AboutPage.TextAppearance.InfoCardEntry.Title"
    />

</RelativeLayout>